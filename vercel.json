{
  "version": 2,
  "builds": [
    {
      "src": "apps/api-gateway/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/schema.prisma"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api-gateway/src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ]
    }
  ],
  "buildCommand": "prisma generate && npm run build"
}
