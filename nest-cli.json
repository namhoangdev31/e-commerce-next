{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "mail/templates/**/*",
        "watchAssets": true
      },
      {
        "include": "**/*.css",
        "watchAssets": true
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "dtoFileNameSuffix": [
          ".dto.ts",
          ".entity.ts"
        ],
        "classValidatorShim": true,
        "introspectComments": true
      }
    }
  ],
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "payment-gateway": {
      "type": "application",
      "root": "apps/payment-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/payment-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-gateway/tsconfig.app.json"
      }
    }
  }
}