{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {}
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "views/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}