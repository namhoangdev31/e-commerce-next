<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống Quản lý Nội dung</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .fade-in {
            animation: fadeIn 0.3s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .feature-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        .feature-modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Back button -->
        <button onclick="window.history.back()" class="mb-4 text-gray-600 hover:text-gray-800 transition flex items-center">
            <i class="fas fa-arrow-left mr-2"></i>
            Trở về
        </button>

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Hệ thống Quản lý Nội dung</h1>
            <p class="text-gray-600 mt-2">Quản lý và tùy chỉnh các thành phần của website theo vai trò</p>
        </div>

        <!-- Thanh công cụ -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex gap-4">
                <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-plus mr-2"></i>Thêm mới
                </button>
                <button class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">
                    <i class="fas fa-sync-alt mr-2"></i>Làm mới
                </button>
            </div>
            <div class="flex gap-4">
                <input type="text" placeholder="Tìm kiếm..." class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <select class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Tất cả</option>
                    <option value="header">Header</option>
                    <option value="sidebar">Sidebar</option>
                    <option value="content">Nội dung</option>
                    <option value="footer">Footer</option>
                </select>
                <select class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Tất cả vai trò</option>
                    <option value="admin">Admin</option>
                    <option value="manager">Manager</option>
                    <option value="user">User</option>
                </select>
            </div>
        </div>

        <!-- Danh sách các thành phần -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Header Components -->
            <div class="glass-effect rounded-xl p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Header Components</h2>
                    <button class="text-blue-600 hover:text-blue-800" onclick="showFeatureModal('header')">
                        <i class="fas fa-plus-circle text-xl"></i>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Logo</span>
                            <span class="ml-2 text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Admin</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Navigation Menu</span>
                            <span class="ml-2 text-xs bg-green-100 text-green-800 px-2 py-1 rounded">All</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Components -->
            <div class="glass-effect rounded-xl p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Sidebar Components</h2>
                    <button class="text-blue-600 hover:text-blue-800" onclick="showFeatureModal('sidebar')">
                        <i class="fas fa-plus-circle text-xl"></i>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Menu Chính</span>
                            <span class="ml-2 text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Manager</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Widget</span>
                            <span class="ml-2 text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded">User</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content Components -->
            <div class="glass-effect rounded-xl p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Content Components</h2>
                    <button class="text-blue-600 hover:text-blue-800" onclick="showFeatureModal('content')">
                        <i class="fas fa-plus-circle text-xl"></i>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Hero Section</span>
                            <span class="ml-2 text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Admin</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Features Grid</span>
                            <span class="ml-2 text-xs bg-green-100 text-green-800 px-2 py-1 rounded">All</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Components -->
            <div class="glass-effect rounded-xl p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Footer Components</h2>
                    <button class="text-blue-600 hover:text-blue-800" onclick="showFeatureModal('footer')">
                        <i class="fas fa-plus-circle text-xl"></i>
                    </button>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Contact Info</span>
                            <span class="ml-2 text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Manager</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-white rounded-lg shadow-sm">
                        <div>
                            <span>Social Links</span>
                            <span class="ml-2 text-xs bg-green-100 text-green-800 px-2 py-1 rounded">All</span>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-600 hover:text-blue-600"><i class="fas fa-edit"></i></button>
                            <button class="text-gray-600 hover:text-red-600"><i class="fas fa-trash"></i></button>
                            <button class="text-gray-600 hover:text-green-600"><i class="fas fa-user-lock"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Modal -->
    <div id="featureModal" class="feature-modal">
        <div class="bg-white rounded-xl p-6 w-full max-w-md">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold" id="modalTitle">Thêm tính năng mới</h3>
                <button onclick="hideFeatureModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form class="space-y-4">
                <div>
                    <label class="block text-gray-700 mb-2">Tên tính năng</label>
                    <input type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Mô tả</label>
                    <textarea class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" rows="3"></textarea>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Icon</label>
                    <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="fa-home">Home</option>
                        <option value="fa-user">User</option>
                        <option value="fa-cog">Settings</option>
                    </select>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Phân quyền</label>
                    <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="all">Tất cả</option>
                        <option value="admin">Admin</option>
                        <option value="manager">Manager</option>
                        <option value="user">User</option>
                    </select>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                    Thêm tính năng
                </button>
            </form>
        </div>
    </div>

    <script>
        function showFeatureModal(type) {
            document.getElementById('featureModal').classList.add('active');
            document.getElementById('modalTitle').textContent = `Thêm tính năng ${type}`;
        }

        function hideFeatureModal() {
            document.getElementById('featureModal').classList.remove('active');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.glass-effect');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('fade-in');
                }, index * 150);
            });
        });
    </script>
</body>
</html>
